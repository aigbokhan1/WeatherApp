<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_margin="10dp">


    <TextView
        android:id="@+id/textview_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/country"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textview_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/region"
        android:layout_toRightOf="@id/textview_country"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/tv_lat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/latitude"
        android:layout_below="@id/textview_country"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textview_lat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lat"
        android:layout_below="@id/textview_country"
        android:layout_toRightOf="@id/tv_lat"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tv_lon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/longitude"
        android:layout_below="@id/textview_lat"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:textStyle="bold"/>



    <TextView
        android:id="@+id/textview_lon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_lat"
        android:layout_toRightOf="@id/tv_lon"
        android:text="lon"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_localtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/localtime"
        android:layout_below="@id/textview_lon"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textview_localtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="localtime"
        android:layout_below="@+id/textview_lon"
        android:layout_toRightOf="@id/tv_localtime"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:textStyle="bold"/>

</RelativeLayout>